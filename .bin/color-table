#!/usr/bin/env python3

def esc(*colors):
  return '\033[' + ';'.join(map(str, filter(None, colors))) + 'm'

def unit(*colors):
  print('{} ‚óè {}'.format(esc(*colors), esc()), end='')

def triple(*colors):
  for mode in range(3):
    unit(mode, *colors)

def line(bg):
  triple(bg)
  for fg in range(30, 38):
    triple(fg, bg)
  print()

def table():
  line(0)
  for bg in range(8):
    for mode in (40, 100):
      line(bg + mode)

table()
